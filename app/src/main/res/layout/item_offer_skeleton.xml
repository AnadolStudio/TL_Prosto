<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/shimmer_card_light_bg_28"
    android:padding="16dp"
    android:alpha="0.5">

    <View
        android:id="@+id/company_logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/company_title"
        android:layout_width="127dp"
        android:layout_height="14dp"
        android:layout_margin="12dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toEndOf="@id/company_logo"
        app:layout_constraintTop_toTopOf="@id/company_logo" />

    <View
        android:id="@+id/company_description"
        android:layout_width="43dp"
        android:layout_height="9dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toEndOf="@id/company_logo"
        app:layout_constraintTop_toBottomOf="@id/company_title" />

    <View
        android:id="@+id/text_line_1"
        android:layout_width="296dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/company_logo" />

    <View
        android:id="@+id/text_line_2"
        android:layout_width="256dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_line_1" />

    <View
        android:id="@+id/text_line_3"
        android:layout_width="296dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shimmer_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_line_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
