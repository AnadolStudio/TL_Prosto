<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/view_sceleton_card"
        android:id="@+id/error_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/error_2"/>

    <include
        layout="@layout/view_sceleton_card"
        android:id="@+id/error_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/error_3"
        app:layout_constraintTop_toBottomOf="@id/error_1" />

    <include
        layout="@layout/view_sceleton_card"
        android:id="@+id/error_3"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/error_4"
        app:layout_constraintTop_toBottomOf="@id/error_2" />


    <include
        layout="@layout/view_sceleton_card"
        android:id="@+id/error_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/error_3" />


</androidx.constraintlayout.widget.ConstraintLayout>